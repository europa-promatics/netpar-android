<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/friend_list_image_height"
    android:layout_marginBottom="@dimen/dp3"
    app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp2"
            android:weightSum="2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:src="@drawable/friend_place" />

           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
               android:layout_marginLeft="@dimen/dp10"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/invite"
                    android:layout_toStartOf="@+id/invite"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Ravi Teja"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading_text" />


                <TextView
                    android:id="@+id/invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/post_button_back"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:paddingTop="@dimen/dp8"
                    android:text="@string/inv"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text" />

            </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>

