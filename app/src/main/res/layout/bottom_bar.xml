<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/design_bottom_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="bottom|end"
    android:layout_alignParentBottom="true"
    card_view:contentPadding="@dimen/dp2"
    card_view:cardCornerRadius="0dp"
    card_view:cardBackgroundColor="@color/bot_bar_bg_color"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/home_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >


            <ImageView
                android:id="@+id/home_image"
                android:layout_width="@dimen/bottom_small_icon"
                android:layout_height="@dimen/bottom_small_icon"
                android:src="@drawable/unsel_home"/>

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text"
                android:textColor="@color/logo"
                android:text="@string/home"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/contabution_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/contrabution_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/middle_plus"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_account_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/my_account_image"
                android:layout_width="@dimen/bottom_small_icon"
                android:layout_height="@dimen/bottom_small_icon"
                android:src="@drawable/unsel_my_account"/>

            <TextView
                android:id="@+id/my_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text"
                android:textColor="@color/logo"
                android:layout_marginTop="@dimen/dp2"
                android:text="@string/my_account"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
