<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp20"
    android:paddingEnd="@dimen/dp10"
    android:paddingStart="@dimen/dp10"
    android:paddingTop="@dimen/dp20"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@id/title"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:text="@string/invite"
        android:textColor="@color/black"
        android:textSize="@dimen/big_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/fb_option"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/invite_icons"
            android:src="@drawable/fb_option"
            />

        <ImageView
            android:id="@+id/whats_app_option"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/invite_icons"
            android:src="@drawable/whatsapp_option"
            />

        <ImageView
            android:id="@+id/message_option"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/invite_icons"
            android:src="@drawable/mail_option"
            />

    </LinearLayout>


</LinearLayout>
