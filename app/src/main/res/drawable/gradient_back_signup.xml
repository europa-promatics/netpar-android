<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="270.0"
                android:centerColor="@color/light_black"
                android:endColor="@color/dark_black"
                android:startColor="@color/light_black" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dp30"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/dp30" />
            <stroke
                android:width="1dp"
                android:color="#44ffffff" />
       </shape>
</item>
    <item android:top="-10dp" android:right="-10dp" android:bottom="-10dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/black" />
        </shape>
    </item>
</layer-list>

